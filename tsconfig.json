{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    // "baseUrl": ".",
    // "paths": {
    //   "@features/*": ["src/features/*"],
    //   "@shared/*": ["src/shared/*"],
    //   "@app/*": ["app/*"],
    //   "@/*": ["./*"]
    // },
    "paths": {
      "@features/*": ["./src/features/*"],
      "@shared/*": ["./src/shared/*"],
      "@/*": ["./*"]
    },
    "types": ["jest", "@testing-library/jest-native/extend-expect"]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "jest.config.js"
  ],
  "exclude": ["node_modules", "build"]
}
